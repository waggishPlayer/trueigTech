{
    "info": {
        "name": "FitPlanHub API",
        "description": "API collection for FitPlanHub - Fitness Plan Management System",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Signup User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"USER\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/signup",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "signup"
                            ]
                        }
                    }
                },
                {
                    "name": "Signup Trainer",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Jane Trainer\",\n  \"email\": \"jane@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"TRAINER\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/signup",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "signup"
                            ]
                        }
                    }
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"token\", jsonData.token);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Plans",
            "item": [
                {
                    "name": "Create Plan (Trainer)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"30-Day Full Body Workout\",\n  \"description\": \"Complete transformation program with daily exercises\",\n  \"price\": 49.99,\n  \"durationDays\": 30\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/plans",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "plans"
                            ]
                        }
                    }
                },
                {
                    "name": "Get All Plans (Preview)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/plans",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "plans"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Plan Details",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/plans/:planId",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "plans",
                                ":planId"
                            ],
                            "variable": [
                                {
                                    "key": "planId",
                                    "value": ""
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Update Plan (Trainer)",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated Plan Title\",\n  \"price\": 59.99\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/plans/:planId",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "plans",
                                ":planId"
                            ],
                            "variable": [
                                {
                                    "key": "planId",
                                    "value": ""
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Plan (Trainer)",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/plans/:planId",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "plans",
                                ":planId"
                            ],
                            "variable": [
                                {
                                    "key": "planId",
                                    "value": ""
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Subscribe to Plan (User)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/plans/:planId/subscribe",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "plans",
                                ":planId",
                                "subscribe"
                            ],
                            "variable": [
                                {
                                    "key": "planId",
                                    "value": ""
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Trainers",
            "item": [
                {
                    "name": "Get All Trainers",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/trainers",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "trainers"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Trainer Details",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/trainers/:trainerId",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "trainers",
                                ":trainerId"
                            ],
                            "variable": [
                                {
                                    "key": "trainerId",
                                    "value": ""
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Follow Trainer (User)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/trainers/:trainerId/follow",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "trainers",
                                ":trainerId",
                                "follow"
                            ],
                            "variable": [
                                {
                                    "key": "trainerId",
                                    "value": ""
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Unfollow Trainer (User)",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/trainers/:trainerId/unfollow",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "trainers",
                                ":trainerId",
                                "unfollow"
                            ],
                            "variable": [
                                {
                                    "key": "trainerId",
                                    "value": ""
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Feed",
            "item": [
                {
                    "name": "Get Personalized Feed (User)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/feed",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "feed"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}